---
import ServiceLayout from "../layouts/ServiceLayout.astro";
import NavCustomDev from "../components/pages-custom-dev/NavCustomDev.astro";
import HeroCustomDev from "../components/pages-custom-dev/HeroCustomDev.astro";
import ProcessSteps from "../components/pages-custom-dev/ProcessSteps.astro";
import TechGrid from "../components/pages-custom-dev/TechGrid.astro";
import FAQCustomDev from "../components/pages-custom-dev/FAQCustomDev.astro";

// ðŸ‘‡ Importa el MD como componente
import Overview from "../content/custom-dev/overview.md";

import cases from "../content/custom-dev/cases.json";
import contact from "../content/custom-dev/contact.json";
---

<ServiceLayout>
  <div slot="subnav"><NavCustomDev /></div>

  <section id="overview">
    <HeroCustomDev />
    <!-- ðŸ‘‡ Renderiza el componente MD directamente -->
    <article><Overview /></article>
  </section>

  <section id="process"><ProcessSteps /></section>
  <section id="tech"><TechGrid /></section>

  <section id="cases">
    <h2>{cases.title}</h2>
    <ul>
      {cases.items.map((c) => (
        <li>
          <h3>{c.title}</h3>
          <p>{c.summary}</p>
          <strong>{c.kpi}</strong>
        </li>
      ))}
    </ul>
  </section>

  <section id="faq"><FAQCustomDev /></section>

  <section id="contact">
    <h2>{contact.title}</h2>
    <p>{contact.subtitle}</p>
    <a href={contact.cta.href}>{contact.cta.label}</a>
  </section>
</ServiceLayout>
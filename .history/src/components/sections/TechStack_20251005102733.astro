---
import tech from "../../content/home/tech.json";
---
<section aria-labelledby="tech-title">
  <h2 id="tech-title">{tech.title}</h2>
  <p>{tech.subtitle}</p>

  <!-- Lugar para el orbit (luego añadimos island). Por ahora: grid simple -->
  <ul>
    {tech.orbitLogos.map((t) => (
      <li><a href={t.url} rel="noopener">{t.name}</a></li>
    ))}
  </ul>

  <!-- Ticker inverso: por ahora solo lista -->
  <p>{tech.ticker.join(" · ")}</p>
</section>
---
import tech from "../../content/home/tech.json";
---
<section id="tech" class="tech-section">
  <div class="tech-glow"></div>
  
  <div class="container mx-auto relative z-10">
    <div class="text-center mb-20">
      <h2 class="tech-title">{tech.title}</h2>
      <p class="tech-subtitle">{tech.subtitle}</p>
    </div>
    
    <div class="orbit-container">
      <!-- Central glow -->
      <div class="orbit-sun" aria-hidden="true"></div>
      
      <!-- Orbit ring with rotating icons -->
      <div class="orbit-ring">
        {tech.technologies.slice(0, 12).map((t, i) => {
          const angle = (i / 12) * 180; // 180 degrees for semicircle
          return (
            <div class="orbit-item" style={`--angle: ${angle}deg;`}>
              <div class="icon-wrapper">
                <img src={`https://cdn.simpleicons.org/${t.slug}/ffffff`} alt={t.label} class="tech-svg" />
              </div>
            </div>
          );
        })}
      </div>
    </div>

    <!-- Ticker section -->
    <div class="ticker-wrapper">
      <p class="ticker-title">Trusted by</p>
      <div class="ticker-track">
        {[...Array(3)].map(() => (
          tech.technologies.map((t) => (
            <span class="ticker-item">
              <span class="ticker-icon">â˜…</span>
              {t.label}
            </span>
          ))
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    position: relative;
    padding: 8rem 2rem;
    overflow: hidden;
    background: var(--color-bg, #020617);
  }

  .tech-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 60%;
    height: 60%;
    background: radial-gradient(ellipse, rgba(124, 58, 237, 0.15) 0%, rgba(37, 99, 235, 0.1) 40%, transparent 70%);
    pointer-events: none;
    filter: blur(80px);
    z-index: 1;
  }

  .tech-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(220, 38, 38, 0.8) 50%, rgba(162, 28, 175, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  .tech-subtitle {
    color: rgba(255, 255, 255, 0.6);
    font-size: 1.125rem;
    max-width: 42rem;
    margin: 0 auto;
  }

  /* Orbit container */
  .orbit-container {
    position: relative;
    width: 100%;
    max-width: 900px;
    height: 400px;
    margin: 0 auto 6rem;
    overflow: hidden;
  }

  /* Central glow/sun */
  .orbit-sun {
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 500px;
    height: 500px;
    transform: translateX(-50%);
    border-radius: 50%;
    background: radial-gradient(
      circle at 50% 50%, 
      rgba(99, 102, 241, 0.5) 0%, 
      rgba(139, 92, 246, 0.4) 25%,
      rgba(168, 85, 247, 0.3) 45%, 
      rgba(124, 58, 237, 0.15) 65%,
      transparent 80%
    );
    filter: blur(50px);
    z-index: 2;
    pointer-events: none;
  }

  /* Orbit ring - rotates clockwise */
  .orbit-ring {
    position: absolute;
    left: 50%;
    bottom: 0;
    width: 700px;
    height: 700px;
    transform: translateX(-50%);
    animation: orbit-clockwise 40s linear infinite;
    z-index: 3;
  }

  @keyframes orbit-clockwise {
    from { transform: translateX(-50%) rotate(0deg); }
    to   { transform: translateX(-50%) rotate(360deg); }
  }

  /* Orbit item positioning */
  .orbit-item {
    position: absolute;
    left: 50%;
    top: 50%;
    transform-origin: 0 0;
    transform: 
      rotate(var(--angle)) 
      translate(-50%, -350px);
  }

  /* Icon wrapper - counter-rotates to keep icons upright */
  .icon-wrapper {
    width: 70px;
    height: 70px;
    display: flex;
    align-items: center;
    justify-content: center;
    background: radial-gradient(
      circle at 50% 50%, 
      rgba(30, 41, 59, 0.8) 0%, 
      rgba(15, 23, 42, 0.9) 100%
    );
    border-radius: 50%;
    border: 1px solid rgba(139, 92, 246, 0.3);
    backdrop-filter: blur(10px);
    box-shadow: 
      0 0 20px rgba(139, 92, 246, 0.2),
      inset 0 1px 1px rgba(255, 255, 255, 0.1);
    transition: all 0.3s ease;
    animation: counter-rotate 40s linear infinite;
  }

  @keyframes counter-rotate {
    from { transform: rotate(0deg); }
    to   { transform: rotate(-360deg); }
  }

  .icon-wrapper:hover {
    background: radial-gradient(
      circle at 50% 50%, 
      rgba(99, 102, 241, 0.4) 0%, 
      rgba(139, 92, 246, 0.3) 100%
    );
    border-color: rgba(139, 92, 246, 0.6);
    box-shadow: 
      0 0 30px rgba(139, 92, 246, 0.4),
      inset 0 1px 1px rgba(255, 255, 255, 0.2);
    transform: scale(1.15) rotate(-360deg);
  }

  .tech-svg {
    width: 36px;
    height: 36px;
    filter: brightness(0) invert(1) opacity(0.8);
    transition: all 0.3s ease;
  }

  .icon-wrapper:hover .tech-svg {
    filter: brightness(1) invert(0) opacity(1);
    transform: scale(1.1);
  }

  /* Ticker wrapper */
  .ticker-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 3rem 0 2rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    z-index: 4;
  }

  .ticker-title {
    text-align: center;
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    margin-bottom: 2rem;
    opacity: 0.7;
  }

  .ticker-track {
    display: flex;
    gap: 3rem;
    animation: ticker-scroll 50s linear infinite;
    width: max-content;
  }

  @keyframes ticker-scroll {
    from { transform: translateX(0); }
    to   { transform: translateX(-33.333%); }
  }

  .ticker-item {
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.875rem;
    white-space: nowrap;
    display: inline-flex;
    align-items: center;
    gap: 0.75rem;
    opacity: 0.8;
    transition: opacity 0.3s ease;
  }

  .ticker-item:hover {
    opacity: 1;
  }

  .ticker-icon {
    color: rgba(139, 92, 246, 0.6);
    font-size: 0.625rem;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .orbit-container { 
      height: 300px; 
      max-width: 600px; 
    }
    
    .orbit-ring { 
      width: 500px; 
      height: 500px; 
    }
    
    .orbit-item { 
      transform: 
        rotate(var(--angle)) 
        translate(-50%, -250px);
    }
    
    .icon-wrapper { 
      width: 56px; 
      height: 56px; 
    }
    
    .tech-svg { 
      width: 28px; 
      height: 28px; 
    }
    
    .orbit-sun { 
      width: 350px; 
      height: 350px; 
    }
  }

  @media (max-width: 480px) {
    .orbit-container { 
      height: 250px; 
      max-width: 400px; 
    }
    
    .orbit-ring { 
      width: 400px; 
      height: 400px; 
    }
    
    .orbit-item { 
      transform: 
        rotate(var(--angle)) 
        translate(-50%, -200px);
    }
    
    .icon-wrapper { 
      width: 48px; 
      height: 48px; 
    }
    
    .tech-svg { 
      width: 24px; 
      height: 24px; 
    }
  }
</style>
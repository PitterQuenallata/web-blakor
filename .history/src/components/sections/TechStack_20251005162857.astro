---
import tech from "../../content/home/tech.json";
---
<section id="tech" class="tech-section">
  <div class="tech-glow"></div>
  
  <div class="container mx-auto relative z-10">
    <div class="text-center mb-20">
      <h2 class="tech-title">{tech.title}</h2>
      <p class="tech-subtitle">{tech.subtitle}</p>
    </div>
    
    <div class="orbit-container">
      <svg class="orbit-path" viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="orbitGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#dc2626;stop-opacity:0.3" />
            <stop offset="50%" style="stop-color:#a21caf;stop-opacity:0.3" />
            <stop offset="100%" style="stop-color:#7e22ce;stop-opacity:0.3" />
          </linearGradient>
        </defs>
        <path d="M 50 350 Q 400 50, 750 350" stroke="url(#orbitGradient)" stroke-width="2" fill="none" opacity="0.5"/>
      </svg>
      <div class="orbit-ring">
        {tech.technologies.slice(0, 12).map((t, i) => {
          const angle = (i / 12) * 180; // SemicÃ­rculo: 180 grados
          return (
            <div class="orbit-item" style={`--angle: ${angle}deg;`} data-tech={t.slug}>
              <div class="icon-holder">
                <img src={`https://cdn.simpleicons.org/${t.slug}`} alt={t.label} class="tech-svg" />
              </div>
            </div>
          );
        })}
      </div>
    </div>

    <div class="ticker-wrapper">
      <p class="ticker-title">Trusted by</p>
      <div class="ticker-track">
        {[...Array(3)].map(() => (
          tech.technologies.map((t) => (
            <span class="ticker-item">{t.label}</span>
          ))
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    position: relative;
    padding: 8rem 2rem;
    overflow: hidden;
  }

  .tech-glow {
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: 50%;
    background: radial-gradient(ellipse, rgba(124, 58, 237, 0.15) 0%, rgba(37, 99, 235, 0.1) 40%, transparent 70%);
    pointer-events: none;
    filter: blur(80px);
  }

  .tech-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(220, 38, 38, 0.8) 50%, rgba(162, 28, 175, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  .tech-subtitle {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    max-width: 42rem;
    margin: 0 auto;
  }

  .orbit-container {
    position: relative;
    width: 100%;
    max-width: 800px;
    height: 400px;
    margin: 0 auto 6rem;
    overflow: hidden;
  }

  .orbit-path {
    position: absolute;
    left: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }

  /* AJUSTA ESTOS VALORES PARA CENTRAR LA Ã“RBITA */
  .orbit-ring {
    position: absolute;
    left: 5%; /* Centro horizontal - generalmente estÃ¡ bien en 50% */
    bottom: 0px; /* ðŸ”§ AJUSTA ESTE VALOR: Sube o baja el centro de rotaciÃ³n (prueba: 40px, 60px, 70px, etc.) */
    width: 0;
    height: 0;
    transform: translateX(-50%);
    animation: orbit-rotate 30s linear infinite;
    z-index: 2;
  }

  @keyframes orbit-rotate {
    from { transform: translateX(-50%) rotate(0deg); }
    to { transform: translateX(-50%) rotate(360deg); }
  }

  .orbit-item {
    position: absolute;
    left: 0;
    top: 0;
    transform: rotate(var(--angle)) translateX(350px); /* ðŸ”§ AJUSTA 350px: Radio del semicÃ­rculo (prueba: 320px, 340px, 360px, etc.) */
    transform-origin: 0 0;
  }

  .icon-holder {
    width: 50px;
    height: 50px;
    transform: translate(-50%, -50%) rotate(calc(-1 * var(--angle)));
    animation: counter-rotate 30s linear infinite;
  }

  @keyframes counter-rotate {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to { transform: translate(-50%, -50%) rotate(-360deg); }
  }

  .tech-svg {
    width: 100%;
    height: 100%;
    filter: brightness(0) invert(1) opacity(0.7);
    transition: all 0.3s ease;
  }

  .icon-holder:hover .tech-svg {
    filter: none;
    transform: scale(1.2);
  }

  .ticker-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 3rem 0 2rem;
    border-top: 1px solid var(--color-line);
  }

  .ticker-title {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    opacity: 0.7;
  }

  .ticker-track {
    display: flex;
    gap: 3rem;
    animation: ticker 40s linear infinite;
    width: max-content;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
  }

  @keyframes ticker {
    from { transform: translateX(0); }
    to { transform: translateX(-33.333%); }
  }

  .ticker-item {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    white-space: nowrap;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .orbit-container {
      height: 250px;
      max-width: 500px;
    }

    .orbit-ring {
      bottom: 30px;
    }

    .orbit-item {
      transform: rotate(var(--angle)) translateX(250px);
    }

    .icon-holder {
      width: 35px;
      height: 35px;
    }
  }
</style>
---
import tech from "../../content/home/tech.json";
---
<section id="tech" class="tech-section">
  <div class="tech-glow"></div>
  
  <div class="container mx-auto relative z-10">
    <div class="text-center mb-20">
      <h2 class="tech-title">{tech.title}</h2>
      <p class="tech-subtitle">{tech.subtitle}</p>
    </div>
    
    <div class="orbit-container">
      <div class="orbit-sun" aria-hidden="true"></div>
      <svg class="orbit-path" viewBox="0 0 800 400" xmlns="http://www.w3.org/2000/svg">
        <defs>
          <linearGradient id="orbitGradient" x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style="stop-color:#dc2626;stop-opacity:0.3" />
            <stop offset="50%" style="stop-color:#a21caf;stop-opacity:0.3" />
            <stop offset="100%" style="stop-color:#7e22ce;stop-opacity:0.3" />
          </linearGradient>
        </defs>
        <path d="M 50 350 Q 400 50, 750 350" stroke="url(#orbitGradient)" stroke-width="2" fill="none" opacity="0.5"/>
      </svg>
      <div class="orbit-ring">
        {tech.technologies.slice(0, 12).map((t, i) => {
          const angle = (i / 12) * 360;
          return (
            <div class="orbit-item" style={`--initial-angle: ${angle}deg;`} data-tech={t.slug}>
              <img src={`https://cdn.simpleicons.org/${t.slug}/ffffff`} alt={t.label} class="tech-svg" />
            </div>
          );
        })}
      </div>
      <div class="orbit-cover" aria-hidden="true"></div>
    </div>

    <div class="ticker-wrapper">
      <p class="ticker-title">Trusted by</p>
      <div class="ticker-track">
        {[...Array(3)].map(() => (
          tech.technologies.map((t) => (
            <span class="ticker-item">{t.label}</span>
          ))
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    position: relative;
    padding: 8rem 2rem;
    overflow: hidden;
  }

  .tech-glow {
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: 50%;
    background: radial-gradient(ellipse, rgba(124, 58, 237, 0.15) 0%, rgba(37, 99, 235, 0.1) 40%, transparent 70%);
    pointer-events: none;
    filter: blur(80px);
  }

  /* New: central glow/sun */
  .orbit-sun {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 220px;
    height: 220px;
    transform: translate(-50%, -50%);
    border-radius: 50%;
    background: radial-gradient(circle at 50% 50%, rgba(126, 34, 206, 0.35), rgba(37, 99, 235, 0.2) 55%, transparent 70%);
    filter: blur(30px);
    z-index: 3;
    pointer-events: none;
  }

  .tech-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(220, 38, 38, 0.8) 50%, rgba(162, 28, 175, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  .tech-subtitle {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    max-width: 42rem;
    margin: 0 auto;
  }

  .orbit-container {
    position: relative;
    width: 100%;
    max-width: 900px;
    height: 520px; /* taller to host full circle */
    margin: 0 auto 6rem;
    overflow: hidden;
  }

  .orbit-path {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 2;
  }

  .orbit-ring {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 520px;   /* circle size */
    height: 520px;  /* circle size */
    transform: translate(-50%, -50%);
    animation: orbit-rotate 36s linear infinite; /* clockwise rotation */
    z-index: 4;
  }

  @keyframes orbit-rotate {
    from { transform: translate(-50%, -50%) rotate(0deg); }
    to   { transform: translate(-50%, -50%) rotate(360deg); }
  }

  .orbit-item {
    position: absolute;
    left: 50%;
    top: 50%;
    width: 60px;
    height: 60px;
    margin-left: -30px;
    margin-top: -30px;
    /* radius = half of ring size minus half of item size = 520/2 - 30 = 230 */
    transform: rotate(var(--initial-angle)) translateY(-230px) rotate(calc(-1 * var(--initial-angle)));
    will-change: transform;
  }

  .tech-svg {
    width: 100%;
    height: 100%;
    filter: brightness(0) invert(1) opacity(0.8);
    transition: transform 0.25s ease, filter 0.25s ease;
  }

  .orbit-item:hover .tech-svg {
    filter: brightness(1) invert(0);
    transform: scale(1.12);
  }

  /* New: cover the bottom half to fake a perfect semicircle */
  .orbit-cover {
    position: absolute;
    left: 0;
    right: 0;
    bottom: 0;
    height: 45%;
    z-index: 6; /* above orbit icons but below ticker */
    pointer-events: none;
    /* hard cover + soft fade into section bg */
    background: linear-gradient(to bottom, rgba(2,6,23,0) 0%, rgba(2,6,23,0.75) 30%, var(--color-bg, #0b0e13) 100%);
    mask-image: linear-gradient(to top, black 70%, transparent 100%);
  }

  .ticker-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 3rem 0 2rem;
    border-top: 1px solid var(--color-line);
    z-index: 7; /* above the cover */
  }

  .ticker-title {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    opacity: 0.7;
  }

  .ticker-track {
    display: flex;
    gap: 3rem;
    animation: ticker 40s linear infinite;
    width: max-content;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
  }

  @keyframes ticker {
    from { transform: translateX(0); }
    to   { transform: translateX(-33.333%); }
  }

  .ticker-item {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    white-space: nowrap;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .orbit-container { height: 380px; max-width: 560px; }
    .orbit-ring { width: 420px; height: 420px; }
    .orbit-item { width: 44px; height: 44px; margin-left: -22px; margin-top: -22px; transform: rotate(var(--initial-angle)) translateY(-188px) rotate(calc(-1 * var(--initial-angle))); }
    .orbit-sun { width: 160px; height: 160px; }
  }
</style>
---
import data from "../../content/home/services.json";
---
<section aria-labelledby="services-title">
  <h2 id="services-title">{data.title}</h2>
  <p>{data.subtitle}</p>
  <ul>
    {data.cards.map((c) => (
      <li>
        <h3>{c.title}</h3>
        <p>{c.description}</p>
        <a href={c.cta.href} target={c.cta.external ? "_blank" : "_self"}>{c.cta.label}</a>
      </li>
    ))}
  </ul>
</section>
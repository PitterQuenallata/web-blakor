---
import Navbar from "../components/nav/Navbar.astro";
import Footer from "../components/footer/Footer.astro";
import "../styles/global.css";

interface Props {
  title?: string;
  description?: string;
  image?: string;
  canonical?: string;
}

const {
  title = "Blakor - Soluciones Tecnológicas Innovadoras",
  description = "Desarrollo de software personalizado, aplicaciones móviles y soluciones SaaS. Transformamos ideas en realidad digital con tecnología de vanguardia.",
  image = "/og-image.jpg",
  canonical = Astro.url.pathname
} = Astro.props;

const siteUrl = Astro.site || "https://blakor.com";
const canonicalURL = new URL(canonical, siteUrl);
const ogImage = new URL(image, siteUrl);
---
<!DOCTYPE html>
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={ogImage} />
    <meta property="og:locale" content="es_ES" />
    <meta property="og:site_name" content="Blakor" />
    
    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:url" content={canonicalURL} />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={ogImage} />
    
    <!-- Favicon -->
    <link rel="icon" type="image/webp" href="/logo-color-web.webp" />
    <link rel="icon" type="image/png" sizes="32x32" href="/logo-color-web.webp" />
    <link rel="apple-touch-icon" sizes="180x180" href="/logo-color-web.webp" />
    
    <slot name="head" />
  </head>
  <body>
    <header><Navbar /></header>
    <main><slot /></main>
    <footer><Footer /></footer>
    
    <script>
      // Lightweight animation system (replaces AOS)
      import '../scripts/animations.ts';
    </script>
  </body>
</html>
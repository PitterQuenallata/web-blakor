---
import nav from "../../content/site/navigation.json";
const items = nav.mobileApps;
---
<nav aria-label="Mobile Apps" class="subnav">
  <div class="container mx-auto">
    <ul class="flex gap-6 justify-center flex-wrap">
      {items.map((i) => <li><a href={i.href}>{i.label}</a></li>)}
    </ul>
  </div>
</nav>

<style>
  .subnav {
    background: rgba(18, 18, 26, 0.8);
    backdrop-filter: blur(10px);
    border-bottom: 1px solid rgba(239, 68, 68, 0.3);
    padding: 1rem 2rem;
    position: sticky;
    top: 80px;
    z-index: 999;
  }

  ul {
    list-style: none;
  }

  a {
    font-family: 'Inter', system-ui, sans-serif;
    font-size: 0.9rem;
    color: #a3a3a3;
    transition: color 0.3s ease;
  }

  a:hover {
    color: #ffffff;
  }
</style>

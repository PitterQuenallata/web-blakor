---
import data from "../../content/mobile-apps/stacks.json";
---
<section id="stacks" class="section-spacing bg-surface/30">
  <div class="container mx-auto">
    <h2 class="text-center mb-16">{data.title}</h2>
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {data.options.map((o) => (
        <article class="card">
          <h3 class="text-brand-accent mb-3">{o.name}</h3>
          <p class="text-text-secondary">{o.desc}</p>
        </article>
      ))}
    </div>
  </div>
</section>

<style>
  .section-spacing {
    padding: 8rem 2rem;
  }
</style>

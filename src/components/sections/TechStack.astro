---
import tech from "../../content/home/tech.json";
import IconCloud from "../ui/IconCloud";

const slugs = tech.technologies.map(t => t.slug);
---
<section id="tech" class="tech-section" data-animate="fade-up">
  <div class="tech-glow"></div>
  
  <div class="container mx-auto relative z-10">
    <div class="text-center mb-20" data-animate="fade-up" data-delay="100">
      <h2 class="tech-title">{tech.title}</h2>
      <p class="tech-subtitle">{tech.subtitle}</p>
    </div>
    
    <!-- PERFORMANCE: IconCloud deshabilitado temporalmente (Three.js ~150KB)
         Causa lag significativo en el rendering inicial
         Alternativa: Usar grid estático de iconos o habilitar con client:visible
    -->
    <!--
    <div class="cloud-container" data-animate="zoom-in" data-delay="200">
      <IconCloud client:only="react" iconSlugs={slugs} />
    </div>
    -->

    <!-- Placeholder temporal: Grid estático de tecnologías -->
    <div class="tech-grid" data-animate="fade-up" data-delay="200">
      {tech.technologies.slice(0, 12).map((t) => (
        <div class="tech-badge">
          <span>{t.label}</span>
        </div>
      ))}
    </div>


    <!-- PERFORMANCE: Ticker optimizado - solo 2 copias de 10 items -->
    <div class="ticker-wrapper">
      <p class="ticker-title">Trusted by</p>
      <div class="ticker-track">
        {[...Array(2)].map(() => (
          tech.technologies.slice(0, 10).map((t) => (
            <span class="ticker-item">{t.label}</span>
          ))
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .tech-section {
    position: relative;
    padding: 8rem 2rem;
    overflow: hidden;
  }

  .tech-glow {
    position: absolute;
    top: 60%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 50%;
    height: 50%;
    background: radial-gradient(ellipse, rgba(124, 58, 237, 0.1) 0%, transparent 60%);
    pointer-events: none;
    /* Removed blur filter for performance */
  }

  .tech-title {
    font-size: clamp(2rem, 4vw, 3rem);
    margin-bottom: 1rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(220, 38, 38, 0.8) 50%, rgba(162, 28, 175, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-weight: 700;
  }

  .tech-subtitle {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
    max-width: 42rem;
    margin: 0 auto;
  }

  .cloud-container {
    position: relative;
    width: 100%;
    max-width: 380px;
    height: 400px;
    margin: 2rem auto 4rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  /* Static tech grid - lightweight alternative to IconCloud */
  .tech-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(140px, 1fr));
    gap: 1rem;
    max-width: 800px;
    margin: 2rem auto 4rem;
    padding: 0 1rem;
  }

  .tech-badge {
    background: rgba(255, 255, 255, 0.02);
    border: 1px solid var(--color-line);
    border-radius: 12px;
    padding: 1rem 1.5rem;
    text-align: center;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    cursor: default;
  }

  .tech-badge:hover {
    background: rgba(220, 38, 38, 0.05);
    border-color: rgba(220, 38, 38, 0.3);
    transform: translateY(-4px);
  }

  .tech-badge span {
    color: var(--color-text-primary);
    font-size: 0.875rem;
    font-weight: 500;
  }


  .ticker-wrapper {
    position: relative;
    width: 100%;
    overflow: hidden;
    padding: 3rem 0 2rem;
    border-top: 1px solid var(--color-line);
  }

  .ticker-title {
    text-align: center;
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: 1.5rem;
    opacity: 0.7;
  }

  .ticker-track {
    display: flex;
    gap: 3rem;
    animation: ticker 30s linear infinite;
    animation-play-state: paused; /* Paused by default for performance */
    width: max-content;
    mask-image: linear-gradient(to right, transparent, black 5%, black 95%, transparent);
    transform: translateZ(0);
  }

  /* Only animate when section is visible/hovered */
  .ticker-wrapper:hover .ticker-track {
    animation-play-state: running;
  }

  /* Auto-play on mobile since hover doesn't work */
  @media (hover: none) {
    .ticker-track {
      animation-play-state: running;
    }
  }

  @keyframes ticker {
    from { transform: translate3d(0, 0, 0); }
    to { transform: translate3d(-50%, 0, 0); } /* 50% para 2 copias */
  }

  .ticker-item {
    color: var(--color-text-secondary);
    font-size: 0.875rem;
    white-space: nowrap;
    opacity: 0.6;
  }

  @media (max-width: 768px) {
    .cloud-container {
      height: 400px;
    }

    .tech-grid {
      grid-template-columns: repeat(2, 1fr);
    }
  }

  /* Pause all animations for reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .ticker-track {
      animation: none;
    }
  }
</style>
---
import contact from "../../content/home/contact.json";
import { Mail, MessageCircle, Facebook, Instagram, Linkedin, Twitter, Youtube } from 'lucide-react';
---
<section id="contact" class="contact-section" data-animate="fade-up">
  <div class="container mx-auto max-w-4xl">
    <div class="contact-card">
      <div class="text-center mb-8" data-animate="fade-up" data-delay="100">
        <h2 class="contact-title">{contact.title}</h2>
        <p class="contact-subtitle">{contact.subtitle}</p>
      </div>
      
      <div class="contact-grid" data-animate="fade-up" data-delay="200">
        <div class="contact-info">
          <h3 class="info-title">Canales de contacto</h3>
          <div class="contact-channels">
            {contact.channels.map((c) => (
              <a href={c.href} class="channel-item" target="_blank">
                <span class="channel-icon">
                  {c.type === 'email' ? <Mail size={24} /> : <MessageCircle size={24} />}
                </span>
                <span class="channel-label">{c.label}</span>
              </a>
            ))}
          </div>
          
          <div class="social-links">
            <h4 class="social-title">SÃ­guenos</h4>
            <div class="social-icons">
              {contact.socialMedia.map((social) => (
                <a href={social.href} target="_blank" class="social-icon" aria-label={social.name} style={`--icon-color: ${social.color}`}>
                  {social.name === 'WhatsApp' && <MessageCircle size={20} />}
                  {social.name === 'Facebook' && <Facebook size={20} />}
                  {social.name === 'Instagram' && <Instagram size={20} />}
                  {social.name === 'Twitter' && <Twitter size={20} />}
                  {social.name === 'TikTok' && (
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                      <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
                    </svg>
                  )}
                  {social.name === 'YouTube' && <Youtube size={20} />}
                  {social.name === 'LinkedIn' && <Linkedin size={20} />}
                </a>
              ))}
            </div>
          </div>
        </div>
        
        <div class="contact-cta">
          <h3 class="cta-title">{contact.finalCTA.title}</h3>
          <p class="cta-text">{contact.finalCTA.subtitle}</p>
          <a href={contact.finalCTA.primary.href} class="btn btn-primary btn-large">{contact.finalCTA.primary.label}</a>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .contact-section {
    padding: 8rem 2rem;
    position: relative;
  }

  .contact-card {
    background: linear-gradient(to bottom, var(--color-surface), rgba(18, 20, 26, 0.8));
    border: 1px solid var(--color-line);
    border-radius: var(--radius-card);
    padding: 3rem;
    box-shadow: 0 4px 16px rgba(0, 0, 0, 0.4);
  }

  .contact-title {
    font-size: clamp(2rem, 4vw, 2.5rem);
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, rgba(255, 255, 255, 0.95) 0%, rgba(59, 130, 246, 0.8) 50%, rgba(6, 182, 212, 0.7) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .contact-subtitle {
    color: var(--color-text-secondary);
    font-size: 1.125rem;
  }

  .contact-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 3rem;
    margin-top: 2rem;
  }

  .info-title, .cta-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 1.5rem;
  }

  .contact-channels {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    margin-bottom: 2rem;
  }

  .channel-item {
    display: flex;
    align-items: center;
    gap: 1rem;
    padding: 1rem;
    background: rgba(59, 130, 246, 0.05);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 12px;
    transition: all 0.2s ease;
  }

  .channel-item:hover {
    background: rgba(59, 130, 246, 0.1);
    border-color: rgba(59, 130, 246, 0.4);
    transform: translateX(4px);
  }

  .channel-icon {
    color: rgba(59, 130, 246, 0.9);
  }

  .channel-label {
    color: var(--color-text-primary);
    font-weight: 500;
  }

  .social-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--color-text-primary);
    margin-bottom: 1rem;
  }

  .social-icons {
    display: flex;
    gap: 1rem;
    flex-wrap: wrap;
  }

  .social-icon {
    width: 3rem;
    height: 3rem;
    display: flex;
    align-items: center;
    justify-content: center;
    /* Usa la variable --icon-color definida en el HTML o un fallback */
    color: var(--icon-color, #3B82F6);
    background: color-mix(in srgb, var(--icon-color, #3B82F6) 5%, transparent);
    border: 1px solid color-mix(in srgb, var(--icon-color, #3B82F6) 20%, transparent);
    border-radius: 50%;
    transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
  }

  .social-icon:hover {
    transform: translateY(-4px) scale(1.1);
    background: color-mix(in srgb, var(--icon-color, #3B82F6) 15%, transparent);
    border-color: color-mix(in srgb, var(--icon-color, #3B82F6) 50%, transparent);
    box-shadow: 0 4px 12px color-mix(in srgb, var(--icon-color, #3B82F6) 20%, transparent);
  }

  .contact-cta {
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    background: rgba(59, 130, 246, 0.03);
    border-radius: 12px;
  }

  .cta-text {
    color: var(--color-text-secondary);
    margin-bottom: 1.5rem;
    line-height: 1.6;
  }

  .btn-large {
    padding: 1rem 2rem;
    font-size: 1.125rem;
  }

  @media (max-width: 768px) {
    .contact-card {
      padding: 2rem;
    }

    .contact-grid {
      grid-template-columns: 1fr;
      gap: 2rem;
    }
  }
</style>

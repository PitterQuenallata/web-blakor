---
import footerData from '../../content/home/footer.json';
import contactData from '../../content/home/contact.json';
import { Linkedin, Twitter, Github, MessageCircle, Facebook, Instagram, Youtube } from 'lucide-react';
---

<footer class="footer-section">
  <div class="footer-container">
    <div class="footer-card">
      <!-- Tape decorations -->
      <div class="tape tape-left">
        <svg xmlns="http://www.w3.org/2000/svg" width="95" height="80" viewBox="0 0 95 80" fill="none">
          <path d="M1 45L70.282 5L88.282 36.1769L19 76.1769L1 45Z" fill="#3D7BFF"/>
        </svg>
      </div>
      <div class="tape tape-right">
        <svg xmlns="http://www.w3.org/2000/svg" width="95" height="80" viewBox="0 0 95 80" fill="none">
          <path d="M1 45L70.282 5L88.282 36.1769L19 76.1769L1 45Z" fill="#3D7BFF"/>
        </svg>
      </div>

      <div class="footer-content">
        <!-- Brand section -->
        <div class="brand-section">
          <h3 class="brand-name">{footerData.brand.name}</h3>
          <p class="brand-description">{footerData.brand.description}</p>
        </div>

        <!-- Links sections -->
        <div class="links-grid">
          {footerData.sections.map((section) => (
            <div class="link-column">
              <h4 class="section-title">{section.title}</h4>
              <div class="section-links">
                {section.links.map((link) => (
                  <a href={link.href} class="footer-link">{link.label}</a>
                ))}
              </div>
            </div>
          ))}
        </div>
      </div>
    </div>

    <!-- Bottom section -->
    <div class="footer-bottom">
      <div class="copyright">
        <p>Â© {new Date().getFullYear()} {footerData.brand.name}. Todos los derechos reservados.</p>
      </div>
      
      <div class="social-links">
        {contactData.socialMedia.map((social) => (
          <a href={social.href} target="_blank" class="social-icon" aria-label={social.name} style={`--icon-color: ${social.color}`}>
            {social.name === 'WhatsApp' && <MessageCircle size={20} />}
            {social.name === 'Facebook' && <Facebook size={20} />}
            {social.name === 'Instagram' && <Instagram size={20} />}
            {social.name === 'Twitter' && <Twitter size={20} />}
            {social.name === 'TikTok' && (
              <svg width="20" height="20" viewBox="0 0 24 24" fill="currentColor">
                <path d="M19.59 6.69a4.83 4.83 0 0 1-3.77-4.25V2h-3.45v13.67a2.89 2.89 0 0 1-5.2 1.74 2.89 2.89 0 0 1 2.31-4.64 2.93 2.93 0 0 1 .88.13V9.4a6.84 6.84 0 0 0-1-.05A6.33 6.33 0 0 0 5 20.1a6.34 6.34 0 0 0 10.86-4.43v-7a8.16 8.16 0 0 0 4.77 1.52v-3.4a4.85 4.85 0 0 1-1-.1z"/>
              </svg>
            )}
            {social.name === 'YouTube' && <Youtube size={20} />}
            {social.name === 'LinkedIn' && <Linkedin size={20} />}
            {social.name === 'GitHub' && <Github size={20} />}
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer-section {
    padding: 4rem 2rem 2rem;
    background: linear-gradient(to top, #0B0C10 0%, rgba(11, 12, 16, 0.8) 50%, rgba(11, 12, 16, 0) 100%);
  }

  .footer-container {
    max-width: 1200px;
    margin: 0 auto;
  }

  .footer-card {
    position: relative;
    background: #12141A;
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 24px;
    padding: 3rem;
    margin-bottom: 2rem;
  }

  .tape {
    position: absolute;
    width: 80px;
    height: 36px;
    transform: scale(0.75);
  }

  .tape-left {
    top: -16px;
    left: -32px;
  }

  .tape-right {
    top: -16px;
    right: -32px;
    transform: scale(0.75) rotate(90deg);
  }

  .footer-content {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 3rem;
  }

  .brand-name {
    font-family: 'Outfit', system-ui, sans-serif;
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    background: linear-gradient(135deg, #dc2626, #a21caf, #7e22ce);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  .brand-description {
    color: #a3a3a3;
    line-height: 1.6;
    max-width: 300px;
  }

  .links-grid {
    display: grid;
    grid-template-columns: repeat(3, 1fr);
    gap: 2rem;
  }

  .section-title {
    font-size: 0.875rem;
    font-weight: 600;
    color: #ffffff;
    text-transform: uppercase;
    letter-spacing: 0.05em;
    margin-bottom: 1rem;
  }

  .section-links {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
  }

  .footer-link {
    color: #a3a3a3;
    font-size: 0.875rem;
    transition: color 0.2s ease;
  }

  .footer-link:hover {
    color: #3D7BFF;
  }

  .footer-bottom {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
  }

  .copyright p {
    color: #a3a3a3;
    font-size: 0.875rem;
  }

  .social-links {
    display: flex;
    gap: 1rem;
  }

  .social-icon {
    color: #a3a3a3;
    transition: color 0.2s ease;
  }

  .social-icon:hover {
    color: var(--icon-color, #3D7BFF);
  }

  @media (max-width: 768px) {
    .footer-card {
      padding: 2rem;
    }

    .footer-content {
      grid-template-columns: 1fr;
      gap: 2rem;
    }

    .links-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .footer-bottom {
      flex-direction: column;
      gap: 1rem;
      text-align: center;
    }

    .tape {
      display: none;
    }
  }
</style>

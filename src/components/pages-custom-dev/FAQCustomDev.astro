---
import data from "../../content/custom-dev/faq.json";
---
<section id="faq" class="section-spacing">
  <div class="container mx-auto max-w-3xl">
    <h2 class="text-center mb-16">{data.title}</h2>
    <dl class="space-y-6">
      {data.items.map((f) => (
        <div class="card">
          <dt class="text-text-primary font-semibold mb-2">{f.q}</dt>
          <dd class="text-text-secondary">{f.a}</dd>
        </div>
      ))}
    </dl>
  </div>
</section>

<style>
  .section-spacing {
    padding: 8rem 2rem;
  }
</style>

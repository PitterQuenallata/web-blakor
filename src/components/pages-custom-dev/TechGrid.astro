---
import data from "../../content/custom-dev/tech.json";
---
<section id="tech" class="section-spacing bg-surface/30">
  <div class="container mx-auto">
    <h2 class="text-center mb-16">{data.title}</h2>
    <div class="grid grid-cols-3 md:grid-cols-4 lg:grid-cols-6 gap-6">
      {data.items.map((t) => (
        <div class="tech-badge">
          <span class="text-text-secondary text-sm">{t}</span>
        </div>
      ))}
    </div>
  </div>
</section>

<style>
  .section-spacing {
    padding: 8rem 2rem;
  }
  
  .tech-badge {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 1rem;
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 8px;
    text-align: center;
    transition: all 0.3s ease;
  }
  
  .tech-badge:hover {
    background: rgba(255, 255, 255, 0.05);
    border-color: rgba(239, 68, 68, 0.4);
  }
</style>
